<mujoco model="buttonbox">
    <compiler angle="radian" inertiafromgeom="auto" inertiagrouprange="1 5"/>
    <asset>
        <texture name="T_btn" type="cube" file="metaworld/button/metal1.png"/>

        <material name="btn_col" rgba="0.96 0.26 0.33 0.5" shininess="0" specular="0"/>
        <material name="btn_red" rgba="0.96 0.26 0.33 1" shininess="1" reflectance=".7" specular=".5"/>
        <material name="btn_top" rgba=".7 .7 .7 1" shininess="1" reflectance=".7" specular=".5"/>
        <material name="btn_black" rgba=".15 .15 .15 1" shininess="1" reflectance=".7" specular=".5"/>
        <material name="btn_metal" rgba=".8 .8 .8 1" texture="T_btn" shininess="1" reflectance="1" specular="1"/>

    </asset>
    <default>

        <default class="buttonbox_base">
            <joint armature="0.001" damping="2" limited="true"/>
            <geom conaffinity="0" contype="0" group="1" type="mesh"/>
            <position ctrllimited="true" ctrlrange="0 1.57"/>
            <default class="buttonbox_viz">
                <geom condim="4" type="mesh"/>
            </default>
            <default class="buttonbox_col">
                <geom conaffinity="1" condim="3" contype="1" group="4" material="btn_col" solimp="0.99 0.99 0.01"
                      solref="0.01 1"/>
            </default>
        </default>
    </default>

    <asset>
        <mesh file="metaworld/button/stopbot.stl" name="stopbot" scale="1.0 1.0 1.0"/>
        <mesh file="metaworld/button/stopbutton.stl" name="stopbutton" scale="1.0 1.0 1.0"/>
        <mesh file="metaworld/button/stopbuttonrim.stl" name="stopbuttonrim" scale="1.0 1.0 1.0"/>
        <mesh file="metaworld/button/stopbuttonrod.stl" name="stopbuttonrod" scale="1.0 1.0 1.0"/>
        <mesh file="metaworld/button/stoptop.stl" name="stoptop" scale="1.0 1.0 1.0"/>
    </asset>

    <worldbody>
        <body pos="0.5 0 .12" euler="-1.57 0 0">
            <body childclass="buttonbox_base" name="buttonbox">
                <geom material="btn_black" mesh="stopbot" pos="0 -0.06 0"/>
                <geom material="btn_metal" euler="1.57 0 0" mesh="stopbuttonrim" pos="0 -0.089 0"/>
                <geom material="btn_top" mesh="stoptop" pos="0 -0.06 0"/>

                <geom class="buttonbox_col" pos="0 0.012 0.072" size="0.12 0.102 0.048" type="box"/>
                <geom class="buttonbox_col" pos="0 0.012 -0.072" size="0.12 0.102 0.048" type="box"/>
                <geom class="buttonbox_col" pos="-0.073 0.012 0" size="0.047 0.102 0.024" type="box"/>
                <geom class="buttonbox_col" pos="0.073 0.012 0" size="0.047 0.102 0.024" type="box"/>

                <body childclass="buttonbox_base" name="button">
                    <inertial pos="0 -0.1935 0" mass=".01" diaginertia="0.001 0.001 0.001"/>
                    <joint name="btnbox_joint" pos="0 0 0" axis="0 -1 0" type="slide" springref=".5" limited="true"
                           stiffness="0.5" range="-0.06 0" damping="1"/>
                    <geom material="btn_red" euler="1.57 0 0" mesh="stopbutton" pos="0 -0.158 0" name="btnGeom"/>
                    <geom material="btn_black" euler="1.57 0 0" mesh="stopbuttonrod" pos="0 -0.126 0"/>

                    <geom class="buttonbox_col" euler="1.57 0 0" pos="0 -0.128 0" size="0.021 0.039" type="cylinder"/>
                    <geom class="buttonbox_col" euler="1.57 0 0" pos="0 -0.166 0" size="0.026 0.008" type="cylinder"/>
                    <geom class="buttonbox_col" euler="1.57 0 0" pos="0 -0.183 0" size="0.043 0.011" type="cylinder"/>
                </body>
            </body>
        </body>
    </worldbody>
</mujoco>
